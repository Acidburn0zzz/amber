  AccessFileName .htaccess
  DocumentRoot "/<%= @directory %>"
  <Directory "/<%= @directory %>">
    AllowOverride FileInfo Indexes Options=All,MultiViews
    <IfModule !mod_authz_core.c>
      Order deny,allow
      Allow from all
    </IfModule>
    <IfModule mod_authz_core.c>
      Require all granted
    </IfModule>
  </Directory>